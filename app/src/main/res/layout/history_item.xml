<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_card"
    android:elevation="6dp"
    android:orientation="horizontal"
    android:padding="16dp"
    android:layout_margin="8dp">

    <!-- Left section containing text info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical"
        android:paddingEnd="12dp">

        <!-- Order ID TextView -->
        <TextView
            android:id="@+id/orderIdText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:text="Order: #1"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Total Amount TextView -->
        <TextView
            android:id="@+id/totalAmountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:text="Total: 250.000Ä‘"
            android:textColor="#FF6F00"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Order Date TextView -->
        <TextView
            android:id="@+id/orderDateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:text="20/12/2024 11:00"
            android:textColor="#757575"
            android:textSize="14sp" />

        <!-- New TextView for product summary -->
        <TextView
            android:id="@+id/productSummaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Products: 2 items"
            android:textColor="#757575"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Order Status ImageView with a rounded border -->
    <ImageView
        android:id="@+id/orderStatus"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        android:clipToOutline="true"
        tools:srcCompat="@tools:sample/avatars" />
</LinearLayout>
